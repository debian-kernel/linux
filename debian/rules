#!/bin/bash
echo -e "\033[31;1m$1\033[;0m"
if [[ $1 == clean ]] ; then
    export VERSION=$(cat debian/changelog | head -n 1 | sed "s/.*(//g" | sed "s/).*//g")
    rm -rvf linux-${VERSION}  || true
    rm -rvf linux-${VERSION}.tar.xz  || true
    rm -fv .stage || true
    dh clean
elif [[ $1 == binary ]] ; then
    bash build.sh
    dh_strip -a
    dh_makeshlibs -a
    dh_shlibdeps -a
    dh_installdeb -a
    dh_gencontrol -a
    dh_md5sums -a
    dh_builddeb -a
else
    dh $@
fi
